<% if (category.include?('Most')) %>
  <h4 class="margin-top-2"><%= category %></h4>
<% elsif (category == 'Result') %>
  <h3 class="margin-top-2 margin-left-1"> Results for 
  <% if (search_term == '')%>
    everything
  <% else %>
  '<%= search_term %>' 
  <% end %> in <%= content.first.category %>s</h3>
<% elsif (category == 'Season') %>
  <h3 class="margin-top-2 margin-left-1"> <%= search_term.upcase_first %> season <%= pluralize_contents(content) %></h3>
<% elsif (category == 'Genre') %>
  <h3 class="margin-top-2 margin-left-1"> Here <%= is_or_are(content) %> the result for
    <% for genre in Genre.find(params[:genres_id]) %>
      <% if (params[:genres_id].length == 1) %>
        <%= Genre.find(params[:genres_id]).first.name %>
      <% else %>
        <% if(genre == Genre.find(params[:genres_id]).last) %>
          and '<%= genre.name %>'
        <% elsif( genre == Genre.find(params[:genres_id])[Genre.find(params[:genres_id]).length-2]) %>
          '<%= genre.name %>'
        <% else %>
          '<%= genre.name%>',
        <% end %>
      <% end %>
    <% end %>
    in <%= content.first.category.upcase_first %>s!
   </h3>
<% elsif (category == 'Year') %>
  <h3 class="margin-top-2 margin-left-1"> <%= pluralize_contents(content).upcase_first %> that started after <%= search_term %> </h3>
<% elsif (category == 'Genre&Year') %>
  <h3 class="margin-top-2 margin-left-1"> <%= pluralize_contents(content).upcase_first %> from <%= search_term[1] %> for 
    <% for genre in Genre.find(params[:genres_id]) %>
      <% if (params[:genres_id].length == 1) %>
        <%= Genre.find(params[:genres_id]).first.name %>
      <% else %>
        <% if(genre == Genre.find(params[:genres_id]).last) %>
          and <%= genre.name %>
        <% elsif( genre == Genre.find(params[:genres_id])[Genre.find(params[:genres_id]).length-2]) %>
          <%= genre.name %>
        <% else %>
          <%= genre.name%>,
        <% end %>
      <% end %>
    <% end %>
  </h3>
<% else %>
  <h5><%= pluralize_contents(content).upcase_first %> Appearences</h5>
<% end %>
<div class="grid-container-for-5 margin-top-1 margin-left-1">
  <% content.each do |content| %>
    <div class="grid-item" >
      <div class="flex content-center position-rel" >
        <%= link_to image_tag(content.image, alt: "Image for #{content.name}",class:'round-edge w-100 position-relative'), content_path(content) %>
        <% if(content.rating_number > 3) %>
          <div class="rating round-edge font-weight-bold"> <%= content.rating %> </div>
        <% end %>
      </div>
      <div class="text-align-center margin-top-auto">
        <%= content.name %>
      </div>
    </div>
  <% end %>
</div>
