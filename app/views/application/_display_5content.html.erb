<% if (category.include?('Most')) %>
  <h4 class="margin-top-2"><%= category %></h4>
<% elsif (category == 'Result') %>
  <h3 class="margin-top-2 margin-left-1"> Results for 
  <% if (search_term == '')%>
    everything
  <% else %>
  '<%= search_term %>' 
  <% end %> in <%= content.first.category %></h3>
<% elsif (category == 'Season') %>
  <h3 class="margin-top-2 margin-left-1"> <%= search_term.upcase_first %> season <%= content.first.category %>s</h3>
<% elsif (category == 'Genre') %>
  <h3 class="margin-top-2 margin-left-1"> Here is the result for
    <% for genre in Genre.find(params[:genres_id]) %>
      <% if (params[:genres_id].length == 1) %>
        <%= Genre.find(params[:genres_id]).first.name %>
      <% else %>
        <% if(genre == Genre.find(params[:genres_id]).last) %>
          and '<%= genre.name %>'
        <% elsif( genre == Genre.find(params[:genres_id])[Genre.find(params[:genres_id]).length-2]) %>
          '<%= genre.name %>'
        <% else %>
          '<%= genre.name%>',
        <% end %>
      <% end %>
    <% end %>
    in <%= content.first.category %>s
   </h3>
<% elsif (category == 'Year') %>
  <h3 class="margin-top-2 margin-left-1"> <%= content.first.category.upcase_first %>s from <%= search_term %> </h3>
<% elsif (category == 'Genre&Year') %>
  <h3 class="margin-top-2 margin-left-1"> <%= content.first.category.upcase_first %>s from <%= search_term[1] %> for 
    <% for genre in Genre.find(params[:genres_id]) %>
      <% if (params[:genres_id].length == 1) %>
        <%= Genre.find(params[:genres_id]).first.name %>
      <% else %>
        <% if(genre == Genre.find(params[:genres_id]).last) %>
          and <%= genre.name %>
        <% elsif( genre == Genre.find(params[:genres_id])[Genre.find(params[:genres_id]).length-2]) %>
          <%= genre.name %>
        <% else %>
          <%= genre.name%>,
        <% end %>
      <% end %>
    <% end %>
  </h3>
<% else %>
  <h5><%= category %> Appearence</h5>
<% end %>
<div class="grid-container-for-5 margin-top-1 margin-left-1">
  <% content.each do |content| %>
    <div class="grid-item">
      <div class="flex content-center">
        <%= link_to image_tag(content.image, alt: "Image for #{content.name}",class:'round-edge'), content_path(content) %>
      </div>
      <div class="text-align-center margin-top-auto">
        <%= content.name %>
      </div>
    </div>
  <% end %>
</div>
