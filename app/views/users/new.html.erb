<div class="col-md-6 offset-md-3">
  <h1 class="text-left display-4 mt-5 mb-5">Sign up</h1>

  <form>
    <fieldset class="form-group">
      <label for="signup_email">Email address</label>
      <input type="email" class="form-control" id="signup_email" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </fieldset>

    <fieldset class="form-group">
      <label for="signup_pass">Password</label>
      <input type="password" class="form-control" id="signup_pass">
    </fieldset>

    <fieldset>
      <button type="submit" class="btn btn-first btn-block">Signup</button>
    </fieldset>
  </form>
</div>