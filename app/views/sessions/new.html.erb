<div class="col-md-6 offset-md-3">
  <h1 class="text-left display-4 mt-5 mb-5">Log in</h1>
  <% if(flash.any?) %>
    <div class="form-group row alert alert-danger ml-0 mr-0 pl-3">
      <% flash.each do |name, message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  
  <%= form_tag(sessions_path) do %>
    <fieldset class="form-group">
      <%= label('Email', :email, nil) %>
      <%= text_field_tag(:email, nil, class: 'form-control', placeholder: 'e.g. me@epfl.ch') %>
    </fieldset>
    
    <fieldset class="form-group">
      <%= label('Password', :password, nil) %>
      <%= password_field_tag(:password, nil, class: 'form-control') %>
    </fieldset>
    
    <fieldset>
      <%= submit_tag('Log in', class: 'btn btn-first btn-block') %>
    </fieldset>
  <% end %>
</div>