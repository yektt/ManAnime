<% if(flash.any?) %>
  <div class="form-group row alert alert-success mt-2 ml-0 mr-0 pl-3">
    <% flash.each do |name, message| %>
      <div><%= message %></div>
    <% end %>
  </div>
<% end %>

<h4 class="margin-top-2"><%= translate('most_popular')%> <%= translate('five')%> <%= translate('animes')%>:</h4>
<%= render partial: 'display_5content', locals: {category: 'Most popular five animes:', content: @anime} %>

<h4 class="margin-top-2"><%= translate('most_popular')%> <%= translate('five')%> <%= translate('mangas')%>:</h4>
<%= render partial: 'display_5content', locals: {category: 'Most popular five mangas:', content: @manga} %>
