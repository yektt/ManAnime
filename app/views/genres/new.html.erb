<div class="col-md-6 offset-md-3">
  <h1 class="text-left display-4 mt-5 mb-5">Add Genre</h1>
  <%= form_for @genre do |form| %>
    <% if(@genre.errors.any?) %>
      <div class="alert alert-danger pb-0 pt-0">
        <ul class="list-unstyled mb-2">
        <% @genre.errors.full_messages.each do |message| %>
          <li class="mt-2"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </fieldset>

    <fieldset class="mt-4 d-flex flex-row align-items-center">
      <%= link_to translate('cancel'), add_path %>
      <%= form.submit class: 'btn btn-first btn-block ml-3' %>
    </fieldset>
  <% end %>
</div>
